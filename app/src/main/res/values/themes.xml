<resources>

    <!-- Base application theme. -->
    <style name="Theme.AndroidTest" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="customCardBackground" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/app_red_variant_1</item>
    </style>

    <style name="customInputLayoutStyle">
        <item name="strokeColor">@color/app_red</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

</resources>